\beamertemplatenavigationsymbolsempty
\mode<presentation>


\setbeamercolor*{author in head/foot}{parent=palette tertiary}
\setbeamercolor*{title in head/foot}{parent=palette secondary}
\setbeamercolor*{date in head/foot}{parent=palette primary}

\setbeamercolor*{section in head/foot}{parent=palette tertiary}
\setbeamercolor*{subsection in head/foot}{parent=palette primary}



\defbeamertemplate*{title page}{diwgc theme}[1][]
{
  
  \begin{centering}
    \begin{beamercolorbox}[right,ht=1cm]{} \pgfimage[height=0.45cm]{DIW_GRADUATE-CENTER_CO}%
	
	\end{beamercolorbox}%
	
	\vfill
	
    \begin{beamercolorbox}[rounded=true,shadow=true,ht=7cm,sep=8pt,left]{title} 
	  \noindent
	  \huge
	  \inserttitle \newline
	  %\newline
	  \vfill
	  \large
	  \insertsubtitle
	  
	  \begin{beamercolorbox}[sep=-4pt,left,ht=0.5pt,wd=0.95\textwidth]{whiteSeparationLine}
	  \end{beamercolorbox}
	  
	  \begin{beamercolorbox}[left,sep=8pt]{}%inner box
	  \large
	  \insertauthor \newline 
	  \end{beamercolorbox}
	  
    \end{beamercolorbox}
    
	\end{centering}
   
  
    \vfill
 
	\begin{beamercolorbox}[]{}
	\tiny \insertinstitute \hfill
	\tiny \insertdate
	\end{beamercolorbox}
}


 
\defbeamertemplate*{last page}{diwgc theme}[1][]
{													
