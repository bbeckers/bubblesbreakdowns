		\LastPageText
		\end{beamercolorbox}
		\begin{beamercolorbox}[sep=4pt,ht=0.5pt,wd=1.0\textwidth]{whiteSeparationLine}
		\end{beamercolorbox}
		\begin{beamercolorbox}[sep=5pt,left]{title}
		\vskip0.2cm
		\pgfimage[height=0.4cm]{GC-Logo-lastPage.pdf}%
		\vskip0.6cm
		\usebeamerfont{title page}
		\small{DIW Berlin -- Deutsches Institut  \newline		
		 f{\"u}r Wirtschaftsforschung e.V. \newline
		 Mohrenstra{\ss}e 58, 10117 Berlin \newline
		 www.diw.de}
		\end{beamercolorbox}	
	\end{beamercolorbox}  
}




